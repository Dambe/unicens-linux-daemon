<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="unicens.xsl"?>
<Unicens AsyncBandwidth="4" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="unicens.xsd">
  <!-- Head Unit -->
  <Node Address="0x200" Name="Head Unit">
    <AVPConnection IsocPacketSize="188" Driver="Video4Linux Driver">
      <USBSocket EndpointAddress="0x1" FramesPerTransaction="2"/>
      <NetworkSocket Route="HeadUnitVideo" Bandwidth="54"/>
    </AVPConnection>
    <SyncConnection MuteMode="NoMuting" Driver="Linux Audio Driver">
      <USBSocket EndpointAddress="0x2" FramesPerTransaction="128"/>
      <NetworkSocket Route="MasterAudio" Bandwidth="4"/>
    </SyncConnection>
    <AVPConnection IsocPacketSize="188"  Driver="Video4Linux Driver">
      <NetworkSocket Route="CameraVideo" Bandwidth="54"/>
      <USBSocket EndpointAddress="0x81" FramesPerTransaction="2"/>
    </AVPConnection>
  </Node>

  <!-- Aux IO -->
  <Node Address="0x240" Name="LINUX AUX I/O">
    <AVPConnection IsocPacketSize="188" Driver="Video4Linux Driver">
      <NetworkSocket Route="HeadUnitVideo" Bandwidth="54"/>
      <USBSocket EndpointAddress="0x81" FramesPerTransaction="2"/>
    </AVPConnection>
    <SyncConnection MuteMode="NoMuting" Driver="Linux Audio Driver">
      <NetworkSocket Route="MasterAudio" Bandwidth="4"/>
      <USBSocket EndpointAddress="0x82" FramesPerTransaction="128"/>
    </SyncConnection>
    <AVPConnection IsocPacketSize="188"  Driver="Video4Linux Driver">
      <USBSocket EndpointAddress="0x2" FramesPerTransaction="2"/>
      <NetworkSocket Route="CameraVideo" Bandwidth="54"/>
    </AVPConnection>
  </Node>

  <Driver Name="Linux Audio Driver">
    <Alsa BufferSize="8192" BufferCount="4" Name="CD-Player" AudioChannelCount="2" AudioChannelResolution="16bit"/>
    <Cdev BufferSize="1024" BufferCount="4" Name="Audio-Processing"/>
  </Driver>

  <Driver Name="Video4Linux Driver">
    <V4l2 BufferSize="1024" BufferCount="4" Name="VLC-Player"/>
    <Cdev BufferSize="1024" BufferCount="4" Name="Video-Processing"/>
  </Driver>
</Unicens>
